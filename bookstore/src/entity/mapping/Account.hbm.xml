<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entity.Account" table="account">

        <meta attribute="class-description">
            This class contains the account data.
        </meta>

        <id name="userID" type="int" column="user_id">
            <generator class="native"/>
        </id>

        <property name="userName" column="user_name" type="string"/>
        <property name="homeAddress" column="home_address" type="string"/>
        <property name="phoneNumber" column="phone_number" type="string"/>
        <property name="eMail" column="e_mail" type="string"/>
        <property name="passwordHash" column="password_hash" type="string"/>
        <property name="isAdmin" column="is_admin" type="boolean"/>

    </class>
</hibernate-mapping>

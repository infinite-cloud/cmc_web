<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entity.Purchase" table="purchase">

        <meta attribute="class-description">
            This class contains the purchase data.
        </meta>

        <id name="orderID" type="int" column="order_id">
            <generator class="native"/>
        </id>

        <property name="userID" column="user_id" type="int"/>
        <property name="totalPrice" column="total_price" type="double"/>
        <property name="orderDate" column="order_date" type="java.util.Date"/>
        <property name="deliveryDate" column="delivery_date" type="java.util.Date"/>
        <property name="deliveryAddress" column="delivery_address" type="string"/>
        <property name="orderStatus" column="order_status" type="string"/>

    </class>
</hibernate-mapping>
